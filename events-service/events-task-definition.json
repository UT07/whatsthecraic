{
    "family": "events-task",
    "executionRoleArn": "arn:aws:iam::395338916491:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::395338916491:role/ecsTaskExecutionRole",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "512",
    "memory": "1024",
    "containerDefinitions": [
        {
            "name": "events-service",
            "image": "395338916491.dkr.ecr.eu-west-1.amazonaws.com/whatsthecraic/events-service:latest",
            "portMappings": [
                {
                    "containerPort": 4003,
                    "hostPort": 4003,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "DB_HOST",
                    "value": "x23332140.cluster-chwlezgyi7rm.eu-west-1.rds.amazonaws.com"
                },
                {
                    "name": "DB_PORT",
                    "value": "3306"
                },
                {
                    "name": "DB_USER",
                    "value": "admin"
                },
                {
                    "name": "DB_NAME",
                    "value": "gigsdb"
                },
                {
                    "name": "INGESTION_ENABLED",
                    "value": "false"
                },
                {
                    "name": "INGESTION_STALE_HOURS",
                    "value": "6"
                },
                {
                    "name": "INGESTION_DEFAULT_CITY",
                    "value": "Dublin"
                },
                {
                    "name": "INGESTION_MAX_PAGES",
                    "value": "5"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/whatsthecraic-events",
                    "awslogs-region": "eu-west-1",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "secrets": [
                {
                    "name": "DB_PASSWORD",
                    "valueFrom": "/whatsthecraic/prod/DB_PASSWORD"
                },
                {
                    "name": "TICKETMASTER_API_KEY",
                    "valueFrom": "/whatsthecraic/prod/TICKETMASTER_API_KEY"
                },
                {
                    "name": "EVENTBRITE_API_TOKEN",
                    "valueFrom": "/whatsthecraic/prod/EVENTBRITE_API_TOKEN"
                },
                {
                    "name": "JWT_SECRET",
                    "valueFrom": "/whatsthecraic/prod/JWT_SECRET"
                }
            ]
        }
    ]
}
