{
    "family": "events-task",
    "executionRoleArn": "arn:aws:iam::395338916491:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::395338916491:role/ecsTaskExecutionRole",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "512",
    "memory": "1024",
    "containerDefinitions": [
        {
            "name": "events-service",
            "image": "395338916491.dkr.ecr.eu-west-1.amazonaws.com/whatsthecraic/events-service:latest",
            "portMappings": [
                {
                    "containerPort": 4003,
                    "hostPort": 4003,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "environment": [
                {"name": "DB_HOST", "value": "x23332140.cluster-chwlezgyi7rm.eu-west-1.rds.amazonaws.com"},
                {"name": "DB_PORT", "value": "3306"},
                {"name": "DB_USER", "value": "admin"},
                {"name": "DB_PASSWORD", "value": "whatsthecraic123"},
                {"name": "DB_NAME", "value": "gigsdb"}
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/whatsthecraic-events",
                    "awslogs-region": "eu-west-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ]
}
