{
  "name": "whatsthecraic",
  "version": "2.0.0",
  "description": "Enterprise-grade event discovery platform",
  "private": true,
  "workspaces": [
    "packages/*",
    "aggregator-service",
    "auth-service",
    "events-service",
    "dj-service",
    "venue-service",
    "ml-service"
  ],
  "scripts": {
    "lint": "scripts/run-lint.sh",
    "test:unit": "scripts/run-unit-tests.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit:all": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:e2e": "jest --testPathPattern=__tests__/e2e",
    "test:ci": "jest --coverage --ci --maxWorkers=2",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "type-check": "tsc --noEmit",
    "build": "tsc --build tsconfig.json"
  },
  "dependencies": {
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "prettier": "^2.8.0"
  }
}
